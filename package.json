{
    "name": "kingshit",
    "version": "0.1.0",
    "description": "休闲塔防游戏 MVP - 类 Kingshot 广告风格",
    "main": "index.js",
    "scripts": {
        "lint": "eslint assets/scripts --ext .ts --fix",
        "lint:check": "eslint assets/scripts --ext .ts",
        "format": "prettier --write \"assets/scripts/**/*.ts\"",
        "format:check": "prettier --check \"assets/scripts/**/*.ts\"",
        "prepare": "husky",
        "patch": "node devvit/scripts/patch-csp.cjs",
        "upload": "cd devvit && devvit upload",
        "playtest": "cd devvit && devvit playtest",
        "build": "bash scripts/build_reddit_package.sh --skip-cocos-build --source-build-dir build/reddit-web --output-webroot devvit/webroot --no-optimize-source-assets",
        "deploy": "npm run build && node devvit/scripts/patch-csp.cjs && cd devvit && devvit upload && devvit install granny_vs_robot_dev"
    },
    "keywords": [
        "game",
        "cocos-creator",
        "tower-defense",
        "casual"
    ],
    "author": "",
    "license": "UNLICENSED",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.0",
        "husky": "^9.0.0",
        "lint-staged": "^15.2.0",
        "prettier": "^3.2.0"
    },
    "lint-staged": {
        "assets/scripts/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "creator": {
        "version": "3.8.8"
